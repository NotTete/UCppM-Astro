---
import BentoBase from "./BentoBase.astro";
import Image from "astro/components/Image.astro";
import { type BentoLayouts } from "../types/bento";

interface Props {
    src: ImageMetadata;
    alt: string;
    layout: BentoLayouts

}

const { src, alt, ...rest } = Astro.props;
---

<BentoBase class="relative object-center h-full overflow-hidden rounded-4xl group" {...rest}>
    <Image
        src={src}
        alt={alt}
        class="absolute t-0 l-0 transition-all duration-500 ease-in-out rounded-4xl w-full h-full object-center object-cover group-hover-always:scale-105"
    />
    <div
        class="absolute t-0 l-0 w-full h-full duration-500 ease-in-out transition-color  bg-bg-light group-hover-always:opacity-0 mix-blend-color opacity-75"
    >
    </div>
</BentoBase>
