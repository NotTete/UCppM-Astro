---
import Logo from "./Logo.astro";

import backgroundImage from "../assets/homepage-bg.webp";
import { Image } from "astro:assets";
---

<div
	class="flex w-full h-full justify-center items-center flex-col border-b-border border-b-1 gap-y-36"
>
	<Image
		src={backgroundImage}
		alt="Background"
		class="absolute w-full h-full object-cover opacity-10 brightness-125 saturate-0 blur-[1px] object-[50%_25%"
		loading="eager"
	/>
	<div class="flex justify-center items-center md:flex-row flex-col-reverse">
		<div class="text-center flex justify-center flex-col gap-4">
			<h1
				class="xl:text-[10rem] sm:text-9xl text-8xl text-shadow-lg/100 font-semibold"
			>
				UCppM
			</h1>
			<h2
				class="xl:text-2xl sm:text-lg text-sm font-light text-text-muted"
			>
				Asociación de Programación Competitiva de la<br />
				Universidad Complutense de Madrid
			</h2>
		</div>
		<Logo loading="eager" class="object-contain md:w-1/4 w-1/3" />
	</div>
	<a href={`${import.meta.env.BASE_URL}/#about`} class="absolute bottom-30 text-xl font-light transition-all ease-in-out duration-300    border-text border-2 hover:shadow-[0px_0px_20px_var(--color-primary)] hover:bg-primary hover:border-primary rounded-2xl p-2.5"
		>Descúbrenos</a>
</div>
