---
const { class: className, id, ...rest } = Astro.props;
---

<button
    class="flex flex-col gap-2 group md:hidden"
    id={id}
    aria-expanded="false"
    aria-label="Button to toggle menu"
    {...rest}
>
    <span
        class="hamburger-bar group-aria-[expanded='true']:translate-y-[10px] group-aria-[expanded='true']:rotate-45"
    ></span>
    <span
        class="hamburger-bar group-aria-[expanded='true']:scale-x-0 group-aria-[expanded='true']:-translate-x-[15px] group-aria-[expanded='true']:opacity-0"
    ></span>
    <span
        class="hamburger-bar group-aria-[expanded='true']:-translate-y-[10px] group-aria-[expanded='true']:-rotate-45"
    ></span>
</button>

<style>
    @reference "tailwindcss";

    .hamburger-bar {
        @apply block h-0.5 w-8 origin-center rounded-full bg-white/80 transition-all  ease-in-out duration-300 hover:shadow-[0px_0px_20px_var(--color-primary)];
    }
</style>
