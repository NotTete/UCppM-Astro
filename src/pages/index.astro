<style>
    @reference "../styles/global.css";

    strong {
        @apply text-primary ease-in-out duration-300 transition-all hover-always:text-shadow-[0px_0px_5px_var(--color-primary)];
    }

    .bento-title {
        @apply font-bold text-5xl sm:text-6xl py-5 text-center ease-in-out duration-300 transition-all hover:scale-105 hover:text-shadow-[0px_0px_20px_var(--color-primary)] active:scale-105 hover-always:text-shadow-[0px_0px_20px_var(--color-primary)] hover-always:text-primary;
